{
  "timer": 55000,
  "type": 4,
  "question": "Classe les volumes suivants du plus grand au plus petit.<br>{slot1} ≥ {slot2} ≥ {slot3}",
  "answer": [
	  "{x} {unitX}",
	  "{y} {unitY}",
	  "{z} {unitZ}"
  ],
  "var": {
	"liters": { "type": "number", "value": "pickRandom([0.05, 0.5, 1, 2, 5])" },
	"centiliters": { "type": "number", "value": "pickRandom([6, 40, 80, 240, 350, 600])" },
	"milliliters": { "type": "number", "value": "pickRandom([40, 600, 1200, 1800, 5500])" },
	"choices": { "type": "array", "value": ["liters","centiliters","milliliters"] },
	"choicesString": { "type": "array", "expression": ["L","cL","mL"] },
	"centilitersConverted": { "type": "number", "value": "centiliters/100" },
	"millilitersConverted": { "type": "number", "value": "milliliters/1000" },
	"choicesBis": { "type": "array", "value": ["liters","centilitersConverted","millilitersConverted"] },
	"max1": { "type": "number", "value": "max(choicesBis)" },
	"min1": { "type": "number", "value": "min(choicesBis)" },
	"int1": { "type": "number", "value": "pickRandom(choicesBis)", "conditions": ["int1!=max1","int1!=min1"] },
	"indexX": { "type": "number", "value": "indexOf(choicesBis,max1) +1" },
	"x": { "type": "number", "value": "choices[indexX]" },
	"unitX": { "type": "string", "value": "choicesString[indexX]" },
	"indexY": { "type": "number", "value": "indexOf(choicesBis,int1) +1" },
	"y": { "type": "number", "value": "choices[indexY]" },
	"unitY": { "type": "string", "value": "choicesString[indexY]" },
	"indexZ": { "type": "number", "value": "indexOf(choicesBis,min1) +1" },
	"z": { "type": "number", "value": "choices[indexZ]" },
	"unitZ": { "type": "string", "value": "choicesString[indexZ]" }
  },
