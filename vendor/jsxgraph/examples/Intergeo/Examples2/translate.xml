<!-- This file is to illustrate the use of the element translate.
     It still has not been run on any DGS, so it may contain bugs. -->
<construction xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xml/intergeo.xsd">
	<elements>
		<point id="P">
			<homogeneous_coordinates>
				<double>1.0</double>
				<double>0.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
		</point>
		<point id="Q">
			<homogeneous_coordinates>
				<double>2.0</double>
				<double>1.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
		</point>
		<vector id="v">
			<homogeneous_coordinates>
				<double>1.0</double>
				<double>1.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
		</vector>
		<point id="A">
			<homogeneous_coordinates>
				<double>-2.0</double>
				<double>0.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
		</point>
		<point id="B">
			<homogeneous_coordinates>
				<double>-1.0</double>
				<double>0.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
		</point>
		<line_segment id="s">
			<homogeneous_coordinates>
				<double>-2.0</double>
				<double>0.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
			<homogeneous_coordinates>
				<double>-1.0</double>
				<double>0.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
		</line_segment>
		<line_segment id="s2">
			<homogeneous_coordinates>
				<double>-1.0</double>
				<double>1.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
			<homogeneous_coordinates>
				<double>0.0</double>
				<double>1.0</double>
				<double>1.0</double>
			</homogeneous_coordinates>
		</line_segment>
	</elements>
	<constraints>
		<free_point>
			<point out="true">P</point>
		</free_point>
		<free_point>
			<point out="true">Q</point>
		</free_point>
		<free_point>
			<point out="true">A</point>
		</free_point>
		<free_point>
			<point out="true">B</point>
		</free_point>
		<vector_from_point_to_point>
			<vector out="true">v</vector>
			<point>P</point>
			<point>Q</point>
		</vector_from_point_to_point>
		<line_segment_by_points>
			<line_segment out="true">s</line_segment>
			<point>A</point>
			<point>B</point>
		</line_segment_by_points>
		<translate>
			<line_segment out="true">s2</line_segment>
			<line_segment>s</line_segment>
			<vector>v</vector>
		</translate>
	</constraints>
</construction>
